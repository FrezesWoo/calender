<div class="page-header">
  <h1>  Calender </h1>
</div>

<div class="container">
  <div class='row'>
    <%= form_with(model: @user, url: {action: "login"}, :method => :POST, local: true, class: 'row') do |form| %>
      <% if @user&.error&.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.error.count, "error") %> prohibited this country from being saved:</h2>

        <ul>
          <% @user.error.each do |message| %>
            <li><%= message %></li>
            pry
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label "姓名" %>
      <%= form.text_field :name, autocomplete: "name", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "手机号" %>
      <%= form.text_field :phone, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label "类型" %>
      <%= radio_button_tag(:type, 1) %>合伙人&nbsp;&nbsp;&nbsp;
      <%= radio_button_tag(:type, 2) %>创业者
    </div>

    <div class="form-group">
      <%= form.submit '进入', :class => 'btn btn-primary'  %>
    </div>
    <% end %>
  </div>
</div>

